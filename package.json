{
  "name": "frey-ui-monorepo",
  "private": true,
  "packageManager": "pnpm@10.30.0",
  "engines": {
    "node": "22.15.1"
  },
  "scripts": {
    "build": "turbo run build",
    "build:storybook": "turbo run build-storybook --filter=@frey-ui/storybook",
    "dev": "turbo run dev --filter=@frey-ui/storybook",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:staged": "biome check --write --staged --no-errors-on-unmatched",
    "check:changed": "biome ci --changed --since=origin/main --no-errors-on-unmatched .",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage:blob && node scripts/collect-reports.mjs && vitest --mergeReports .vitest-reports --coverage.enabled=true --reporter=default --run --passWithNoTests && jrm test-report.junit.xml \"packages/*/.junit-reports/*.xml\" \"apps/*/.junit-reports/*.xml\"",
    "storybook": "turbo run storybook --filter=@frey-ui/storybook",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "ci:changed": "turbo run lint typecheck test build --affected",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/types": "^20.4.0",
    "@vitest/coverage-v8": "4.0.18",
    "husky": "^9.1.7",
    "jsdom": "28.1.0",
    "junit-report-merger": "9.0.3",
    "turbo": "^2.0.6",
    "vitest": "^4.0.18"
  }
}
