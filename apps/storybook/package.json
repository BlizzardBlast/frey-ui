{
  "name": "storybook",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "build": "tsc -b && vite build",
    "lint": "biome lint src .storybook vite.config.ts vitest.setup.ts",
    "format": "biome format --write src .storybook vite.config.ts vitest.setup.ts",
    "format:check": "biome format src .storybook vite.config.ts vitest.setup.ts",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@chromatic-com/storybook": "^5.0.1",
    "@storybook/addon-a11y": "10.2.8",
    "@storybook/addon-docs": "10.2.8",
    "@storybook/addon-onboarding": "10.2.8",
    "@storybook/addon-themes": "^10.2.8",
    "@storybook/react-vite": "10.2.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.5",
    "@vitest/ui": "3.0.5",
    "chromatic": "^11.25.2",
    "jsdom": "^26.0.0",
    "storybook": "10.2.8",
    "typescript": "~5.7.2",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  }
}
